@{
    ViewData["Title"] = "Register";
}
@model website.Models.RegisterModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3>Реєстрація</h3>
    <hr />
    <form class="form-horizontal" asp-action="Register" method="post">
            <div class="form-group" align="center">
                <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;">
                    <label class="col-sm-2 control-label" asp-for="UserName" style="text-align: right;width: 300px;float:unset;">Ваш логін:</label>
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;">
                    <label class="col-sm-2 control-label" asp-for="Password" style="text-align: right;width: 300px;float:unset;">Ваш пароль:</label>
                    <input class="form-control" type="password" asp-for="Password" />
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;"">
                    <label class="col-sm-2 control-label" asp-for="Name" style="text-align: right;width: 300px;float:unset;">Ваше ім'я та прізвище:</label>
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;"">
                    <label class="col-sm-2 control-label" asp-for="Email" style="text-align: right;width: 300px;float:unset;">Ваш e-mail:</label>
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div align="center">
                <button class="btn btn-success" type="submit">Зареєструватись</button>
            </div>
    </form>
    <br />
    <div asp-validation-summary=" All" class="text-danger"></div>
</body>
</html>
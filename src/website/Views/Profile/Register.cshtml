@{
    ViewData["Title"] = "Register";
}
@model website.Models.RegisterModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3 style="margin-left:200px;">Реєстрація</h3>
    <hr />
    <form class="form-horizontal" asp-action="Register" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="UserName">Ваш логін:</label>
                <div class="col-sm-10" style="width:300px;">
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Password">Ваш пароль:</label>
                <div class="col-sm-10" style="width:300px;">
                    <input class="form-control" type="password" asp-for="Password" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Name">Ваше ім'я та прізвище:</label>
                <div class="col-sm-10" style="width:300px;">
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Email">Ваш e-mail:</label>
                <div class="col-sm-10" style="width:300px;">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>

            <div style="text-align:left; margin-left:200px;">
                <button class="btn btn-success" type="submit">Зареєструватись</button>
            </div>
    </form>
    <br />
    <div asp-validation-summary=" All" class="text-danger"></div>
</body>
</html>
@{
    ViewData["Title"] = "Login";
}
@model website.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3>Вхід</h3>
    <hr />
    <form class="form-horizontal" asp-action="Login" method="post">

        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="UserName">Ваш логін:</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Password">Ваш пароль:</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" asp-for="Password" />
            </div>
        </div>
        <div style="text-align:center">
            <button class="btn btn-success" type="submit">Увійти</button>
        </div>
    </form>
    <br />
    <div class="alert-info">

        @ViewBag.Info
    </div>
    <div asp-validation-summary=" All" class="text-danger"></div>
</body>
</html>

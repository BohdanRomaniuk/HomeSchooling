@{
    ViewData["Title"] = "Login";
}
@model website.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h3>Вхід</h3>
    <hr />
    <form class="form-horizontal" asp-action="Login" method="post">
        <div class="alert-info" style="padding:5px;border-radius:5px;width:100%;margin: 12px 0;" align="center">
            @ViewBag.Info
        </div>
        <div class="form-group" align="center">
            <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;">
                <label class="col-sm-2 control-label" asp-for="UserName" style="text-align: right;width: 300px;float:unset;">Ваш логін:</label>
                <input class="form-control" asp-for="UserName" />
            </div>
        </div>
        <div class="form-group" align="center">
            <div class="col-sm-10" style="width:48%;float:unset;display: inline-flex;">
                <label class="col-sm-2 control-label" asp-for="Password" style="text-align: right;width: 300px;float:unset;">Ваш пароль:</label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>
        </div>
        <div align="center">
            <button class="btn btn-success" type="submit">Увійти</button>
        </div>
    </form>
    <br />
    <div asp-validation-summary=" All" class="text-danger"></div>
</body>
</html>

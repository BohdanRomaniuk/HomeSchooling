
@{
    ViewData["Title"] = "Додавання нового курсу";
}

<h3>Додавання нового курсу</h3>
<hr />
@if(Model!=null)
{
    <div class="alert alert-success" role="alert">@Model</div>
}
    <form method="post" asp-controller="Course" asp-action="AddCourse">
        <div class="form-group">
            <label for="exampleInputEmail1">Назва курсу:</label>
            <input type="text" name="courseName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
        </div>
        <div class="form-group">
            <label for="inputDecription">Опис:</label>
            <input type="text" name="courseDescription" class="form-control" id="inputDecription" placeholder="Короткий опис курсу">
        </div>
        <div class="form-group">
            <label for="inputDateStart">Дата початку курсу:</label>
            <input type="text" name="courseStartDatetime" class="form-control" id="inputDate2" placeholder="Наприклад: 07.04.2018 14:00:00">
        </div>
        <div class="form-group">
            <label for="inputDateStart">Дата закінчення курсу:</label>
            <input type="text" name="courseEndDatetime" class="form-control" id="inputDate2" placeholder="Наприклад: 07.04.2019 14:00:00">
        </div>
        <button type="submit" class="btn btn-primary">Створити курс</button>
    </form>


